<h1 class="display-3">Show Book</h1>

<div class="container align-middle">
  <table class ="table table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>Author</th>
        <th>Name</th>
        <th>Read</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <td><%= @book.author %></td>
      <td><%= @book.name %></td>
      <td><%= @book.read %></td>
      <td><%= link_to 'Edit', edit_book_path(@book) %></td>
      <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: 'Sure?' } %></td>
    </tbody>
  </table>
</div>

<br>
<button type="button" class="btn btn-outline-primary">
<%= link_to 'Full Book List', books_path %>
</button>
