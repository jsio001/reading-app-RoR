<h1 class="display-3">Book List</h1>

<div class="container align-middle">

      <table class ="table table-responsive">
        <thead class="thead-inverse">
          <tr>
            <th>Author</th>
            <th>Name</th>
            <th>Read</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @book.each do |book| %>
            <tr>
              <td><%= book.author %></td>
              <td><%= book.name %></td>
              <td><%= book.read %></td>
              <td><%= link_to 'Show', book_path(book) %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>              
              <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

</div>
<br>
  <button type="button" class="btn btn-outline-primary">
    <%= link_to 'Add New Book', new_book_path %>
</button>
